
@model IEnumerable<pzaleszczyk.Models.Author>

@{
    ViewData["Title"] = "Index";
}
<h3>Trivia: </h3>
<h4>
        @Model.ElementAt((int)ViewData["index"]).Surname @Model.ElementAt((int)ViewData["index"]).Name is
        @(DateTime.Now.Year - Model.ElementAt((int)ViewData["index"]).Birthday.Year - 1)
        years old
</h4>